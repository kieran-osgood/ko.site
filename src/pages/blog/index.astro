---
import BlogList from "@components/blog-list.astro";
import Page from "@layouts/page.astro";
import Text from "@components/core/text";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.getMilliseconds() - a.data.date.getMilliseconds(),
);
---

<Page>
  <div class="flex flex-col items-center flex-1">
    <Text.H1>Blog Posts</Text.H1>
    <p class="dark:text-white">
      These are some ramblings on topics like Typescript, React Native, Node and
      Consultancy.
    </p>

    <div
      class="flex flex-col items-center pt-4 px-4 w-full sm:w-3/4 md:w-1/2 gap-2"
    >
      <BlogList items={posts} />
    </div>
  </div>
</Page>
