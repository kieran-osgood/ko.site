---
import LinkButton from '@components/core/link-button.astro';
import Socials from '@components/socials.astro';
---

<footer class="flex flex-col self-center pt-12 px-4 w-full sm:max-w-xl md:max-w-3xl lg:max-w-7xl ">
    <div class='flex flex-row justify-between w-full'>
        <div>
            <div class="pb-10">
                <h2 class='text-4xl font-bold dark:text-white pb-10'>Lets Connect</h2>
                <LinkButton>Contact</LinkButton>
            </div>

            <Socials withText />
        </div>

        {
            /* Not sure why col-end-4 works - lets check whether we just use flex */
        }
        <div class='grid grid-cols-1 col-end-4 gap-1'>
            {
                ['Home', 'About', 'Portfolio', 'Blog', 'Contact'].map(
                    (route) => (
                        <a
                            class='text-black dark:text-white font-bold no-underline'
                            href={`${route.toLowerCase()}`}
                        >
                            {route}
                        </a>
                    ),
                )
            }
        </div>
    </div>

    <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700 w-full">

    <div class='dark:text-slate-400 font-bold pb-8 w-full'>
        &copy; {new Date().getFullYear()}, KO.DEV
    </div>
</footer>
