---
interface Props {
  href: string;
  variant?: "primary" | "secondary" | "tertiary";
}
const primaryFont = "text-white";
const secondaryFont = "text-blue-600 hover:bg-blue-700";

const primaryBg = "bg-blue-600 hover:bg-blue-700";
const secondaryBg = "bg-white hover:bg-white";

const { href, variant = "primary" } = Astro.props;
const s =
  variant === "primary"
    ? `${primaryBg} ${primaryFont}`
    : variant === "secondary"
      ? `${secondaryBg} ${secondaryFont}`
      : `${secondaryFont}`;
---

<a
  class={`inline-flex justify-center items-center gap-x-3 text-center border border-transparent text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white transition py-3 px-4 dark:focus:ring-offset-gray-800 hover:cursor-pointer ${s}`}
  {href}
>
  <slot />

  <svg class="w-3 h-3" width="16" height="16" viewBox="0 0 16 16" fill="none">
    <path
      d="M5.27921 2L10.9257 7.64645C11.1209 7.84171 11.1209 8.15829 10.9257 8.35355L5.27921 14"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"></path>
  </svg>
</a>
