---
import LinkButton from "@components/core/link-button.astro";
import { Image } from "astro:assets";
import phoneFrame from "@assets/phone-frame.png";
import reactLogo from "@assets/react-logo.svg";
import { pageBounds } from "@styles/page";

import Text from "@components/core/text";
---

<!-- Hero -->
<div class="relative flex justify-center overflow-x-clip overflow-y-visible">
  <!-- Gradients -->
  <div
    aria-hidden="true"
    class="flex absolute -top-96 left-1/2 transform -translate-x-1/2"
  >
    <div
      class="bg-gradient-to-r from-primary to-purple-100 blur-3xl w-[25rem] h-[44rem] rotate-[-60deg] transform -translate-x-[10rem] dark:from-violet-900/50 dark:to-purple-900"
    >
    </div>
    <div
      class="bg-gradient-to-tl from-primary via-blue-100 to-primary blur-3xl w-[90rem] h-[50rem] rounded-fulls origin-top-left -rotate-12 -translate-x-[15rem] dark:from-indigo-900/70 dark:via-indigo-900/70 dark:to-blue-900/70"
    >
    </div>
    <!-- <div -->
    <!--   class="bg-gradient-to-r from-violet-300/50 to-purple-100 blur-3xl w-[25rem] h-[44rem] rotate-[-60deg] transform -translate-x-[10rem] dark:from-violet-900/50 dark:to-purple-900" -->
    <!-- > -->
    <!-- </div> -->
    <!-- <div -->
    <!--   class="bg-gradient-to-tl from-blue-50 via-blue-100 to-blue-50 blur-3xl w-[90rem] h-[50rem] rounded-fulls origin-top-left -rotate-12 -translate-x-[15rem] dark:from-indigo-900/70 dark:via-indigo-900/70 dark:to-blue-900/70" -->
    <!-- > -->
    <!-- </div> -->
  </div>
  <!-- End Gradients -->

  <div class={`relative z-10 flex row justify-center ${pageBounds}`}>
    <!-- Left  -->
    <div
      class="flex items-center px-4 sm:px-6 lg:px-8 py-10 lg:py-16 max-w-1/2"
    >
      <div class="max-w-2xl mx-auto">
        <p
          class="inline-block text-sm font-medium bg-clip-text bg-gradient-to-l from-blue-600 to-violet-500 text-transparent dark:from-blue-400 dark:to-violet-400"
        >
          APPS DONE RIGHT
        </p>

        <!-- Title -->
        <div class="max-w-2xl">
          <Text.H1>Time for that KO app.</Text.H1>
        </div>
        <!-- End Title -->

        <div class="mt-4 md:mt-8 max-w-3xl">
          <p class="text-lg text-gray-600 dark:text-gray-400">
            Software engineer with a passion for crafting difficult solutions.
            <!-- TODO: add other info -->
          </p>
        </div>

        <div class="mt-4 md:mt-8 grid gap-3 w-full sm:inline-flex">
          <LinkButton href="/contact">Contact</LinkButton>
          <LinkButton href="/blog" variant="secondary">Blog</LinkButton>
        </div>
      </div>
    </div>

    <!-- Right -->
    <div class="px-4 sm:px-6 lg:px-8 py-10 lg:py-16 max-w-1/2 hidden sm:flex">
      <div class="flex justify-center max-w-2xl text-center mx-auto relative">
        <Image
          src={phoneFrame}
          alt="React native running on an iPhone"
          class="max-w-[55%]"
          loading={"eager"}
        />
        <Image
          src={reactLogo}
          alt="React native running on an iPhone"
          class="max-w-[35%] absolute self-center animate-[spin_3s_linear_infinite]"
          loading={"eager"}
        />
      </div>
    </div>
  </div>
</div>
<!-- End Hero -->
