<div class="relative flex justify-center overflow-x-clip overflow-y-visible">
  <!-- Gradients -->
  <div
    aria-hidden="true"
    class="flex absolute -top-96 left-1/2 transform -translate-x-1/2"
  >
    <div
      class="bg-gradient-to-r from-primary to-purple-100 blur-3xl w-[25rem] h-[44rem] rotate-[-60deg] transform -translate-x-[10rem] dark:from-violet-900/50 dark:to-purple-900"
    >
    </div>
    <div
      class="bg-gradient-to-tl from-primary via-blue-100 to-primary blur-3xl w-[90rem] h-[50rem] rounded-fulls origin-top-left -rotate-12 -translate-x-[15rem] dark:from-indigo-900/70 dark:via-indigo-900/70 dark:to-blue-900/70"
    >
    </div>
